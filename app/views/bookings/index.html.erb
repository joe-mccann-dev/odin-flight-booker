<p>Search for your booking</p>
  <%= form_tag bookings_path, method: :get do %>
    <p>
      <%= label_tag(:search, "confirmation number") %>
      <%= text_field_tag(:search, params[:search], required: true) %>
      <%= submit_tag "Search", name: nil %>
    </p>
  <% end %>


<% if bookings_searched_and_found? %>

  <% @bookings.each do |booking| %>
    <ul>
      <li><%= booking.flight.airline %></li>
      <li><%= booking.flight.flight_number %><li>
      <li><%= booking.flight.origin_airport.code%></li>
      <li><%= booking.flight.destination_airport.code%></li>
      <li><%= booking.flight.duration %>
    </ul>

    <ul>
      <% booking.passengers.each do |passenger| %>
        <li><%= passenger.name %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
